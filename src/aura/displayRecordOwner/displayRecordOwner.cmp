<aura:component controller="displayRecordOwner"
                implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction,force:hasSObjectName" access="global" >
    <aura:attribute name="recordId" type="Id"/> 
    <aura:attribute name="sObjectName" type="string"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="objUser" type="sObject" />	
    
    <div style="padding:100px" class="slds-box slds-theme_shade">
        <div>{!v.objUser.Owner.Name}</div>
         <img src="{!v.objUser.Owner.SmallPhotoUrl}" alt="{!v.objUser.Name}"/> 
          
    </div>   
</aura:component>